// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

model User {
  id          String      @default(cuid()) @id
  name        String
  img         String
  email       String
  phone       String
  linkedin    String   
  github      String   
  summary     String   
  projects    Project[]   
  experience  Experience[]   
  education   Education[]   
  skills      Skill[]       
  
}

model Project {
  id          String    @id @default(cuid())
  title       String
  img         String
  deployedURL String
  githubURL   String
  description String
  skills      Skill[]   
  userId      String
  user        User      @relation(fields: [userId], references: [id])
}
model Experience {
  id          String    @id @default(cuid())
  title       String
  img         String
  company     String
  start       String?
  end         String?
  description String[]
  skills      Skill[]   
  userId      String
  user        User      @relation(fields: [userId], references: [id])
}
model Education {
  id       String    @id @default(cuid())
  institution String
  img       String
  program   String
  start     String?
  end       String?
  courses   Course[]
  skills    Skill[]   
  userId    String
  user      User      @relation(fields: [userId], references: [id])
}
model Skill {
  id           String    @id @default(cuid())
  name         String    @unique
  img          String
  projects     Project[] 
  education    Education[] 
  experience   Experience[] 
  courses      Course[] 
  userId       String
  user         User      @relation(fields: [userId], references: [id])
}
model Course {
  id       String    @id @default(cuid())
  title    String
  skills   Skill[]   
  grade    String?
  educationId String
  education  Education @relation(fields: [educationId], references: [id])
}
